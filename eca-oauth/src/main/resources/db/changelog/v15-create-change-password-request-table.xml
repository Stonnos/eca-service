<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        logicalFilePath="db/changelog/v15-create-change-password-request-table.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="roman.batygin@mail.ru" context="schema">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="change_password_request"/>
            </not>
        </preConditions>
        <createTable tableName="change_password_request">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="change_password_request_token_unique_index"/>
            </column>
            <column name="expire_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="approve_date" type="timestamp"/>
            <column name="new_password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="fk_change_password_request_user_id"
                             referencedTableName="user_entity"
                             referencedColumnNames="id" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>

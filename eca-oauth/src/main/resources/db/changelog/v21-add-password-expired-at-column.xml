<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        logicalFilePath="db/changelog/v21-add-password-expired-at-column.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Add password_expired_at column to user table -->
    <changeSet id="1" author="roman.batygin@mail.ru" context="schema">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="user_entity"/>
            <not>
                <columnExists tableName="user_entity" columnName="password_expired_at"/>
            </not>
        </preConditions>
        <addColumn tableName="user_entity">
            <column name="password_expired_at" type="timestamp"/>
        </addColumn>
    </changeSet>
    
</databaseChangeLog>

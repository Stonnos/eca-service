<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        logicalFilePath="db/changelog/v30-add-classifiers-configuration-global-filter-fields.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Insert classifiers configuration global filter template -->
    <changeSet id="1" author="roman.batygin@mail.ru" context="data">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="global_filter_template"/>
            <sqlCheck expectedResult="0">
                select count(*) from global_filter_template where id = 4
            </sqlCheck>
        </preConditions>
        <insert tableName="global_filter_template">
            <column name="id" valueNumeric="4"/>
            <column name="filter_name" value="classifiersConfigurationFilter"/>
            <column name="template_type" value="CLASSIFIERS_CONFIGURATION"/>
        </insert>
    </changeSet>

    <changeSet id="2" author="roman.batygin@mail.ru" context="data">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="global_filter_field"/>
            <sqlCheck expectedResult="0">
                select count(*) from global_filter_field where global_filter_template_id = 4 and field_name = 'name'
            </sqlCheck>
        </preConditions>
        <insert tableName="global_filter_field">
            <column name="field_name" value="name"/>
            <column name="global_filter_template_id" valueNumeric="4"/>
        </insert>
    </changeSet>
</databaseChangeLog>
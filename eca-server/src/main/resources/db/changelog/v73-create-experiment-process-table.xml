<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        logicalFilePath="db/changelog/v73-create-experiment-process-table.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create_experiment_process_table" author="roman.batygin@mail.ru" context="schema">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="experiment"/>
            <not>
                <tableExists tableName="experiment_process"/>
            </not>
        </preConditions>
        <createTable tableName="experiment_process">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="process_uuid" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="experiment_process_uuid_unique_idx"/>
            </column>
            <column name="process_status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="started" type="timestamp"/>
            <column name="finished" type="timestamp"/>
            <column name="experiment_id" type="bigint">
                <constraints foreignKeyName="fk_experiment_process_experiment_id"
                             referencedTableName="experiment"
                             referencedColumnNames="id" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
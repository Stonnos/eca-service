<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        logicalFilePath="db/changelog/v47-create-ers-retry-request-table.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="roman.batygin@mail.ru" context="schema">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ers_request_cache"/>
            </not>
        </preConditions>
        <createTable tableName="ers_request_cache">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="json_request" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="ers_request_id" type="bigint">
                <constraints foreignKeyName="fk_ers_request_cache_ers_request_id"
                             referencedTableName="ers_request"
                             referencedColumnNames="id" nullable="false"
                             unique="true" uniqueConstraintName="ers_request_cache_ers_request_id_unique_idx"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
